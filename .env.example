# ─── Server Configuration ─────────────────────────────────────────────────────
# Port to run the server on
PORT=8080

# Host to bind the server to (use 0.0.0.0 for all interfaces in production)
HOST=localhost

# Environment mode (development, production, staging)
GO_ENV=production

# Enable debug mode (true/false)
DEBUG=false

# Server timeouts
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s

# ─── API Configuration ─────────────────────────────────────────────────────────
# API key for authentication (optional)
API_KEY=

# Rate limiting (requests per minute)
RATE_LIMIT=100

# Enable CORS (true/false)
ENABLE_CORS=true

# Enable Gzip compression (true/false)
ENABLE_GZIP=true

# ─── Feature Flags ─────────────────────────────────────────────────────────────
# Enable health check endpoints (true/false)
ENABLE_HEALTH_CHECK=true

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Enable profiling endpoints (true/false) - should be false in production
ENABLE_PROFILING=false

# ─── Production Examples ───────────────────────────────────────────────────────
# For production deployment:
# PORT=80
# HOST=0.0.0.0
# GO_ENV=production
# DEBUG=false
# ENABLE_PROFILING=false
# ENABLE_METRICS=true

# For development:
# PORT=3000
# HOST=localhost
# GO_ENV=development
# DEBUG=true
# ENABLE_PROFILING=true